<!DOCTYPE html>
<html lang="en">
<head>
    <title>MVC Blog Project</title>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Blog Template">
    <meta name="author" content="Xiaoying Riley at 3rd Wave Media">
    <link rel="shortcut icon" href="favicon.ico">

    <!-- FontAwesome JS-->
    <script defer src="~/Content/devblog-bs5-v2.0/assets/fontawesome/js/all.min.js"></script>

    <!-- Theme CSS -->
    <link href="~/Content/devblog-bs5-v2.0/assets/css/theme-2.css" rel="stylesheet" />
</head>

<body>

    <header class="header text-center">
        <h1 class="blog-name pt-lg-4 mb-0"><a class="no-text-decoration" href="/Blog/">MVC Blog</a></h1>

        <nav class="navbar navbar-expand-lg navbar-dark">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="navigation" class="collapse navbar-collapse flex-column">
                <div class="profile-section pt-3 pt-lg-0">
                    <img class="profile-image mb-3 rounded-circle mx-auto" src="~/Content/devblog-bs5-v2.0/assets/images/profile.jpg" alt="image">

                    <div class="bio mb-3">MVC Blog Projesine Hoş Geldiniz. Bu proje asp.NET MVC ile geliştirildi.<br><a href="/Blog/Hakkinda">Daha fazla bilgi için</a></div><!--//bio-->
                    <ul class="social-list list-inline py-3 mx-auto">
                        <li class="list-inline-item"><a href="#"><i class="fab fa-twitter fa-fw"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fab fa-linkedin-in fa-fw"></i></a></li>
                        <li class="list-inline-item"><a href="https://github.com/a-mertdincer"><i class="fab fa-github-alt fa-fw"></i></a></li>
                    </ul><!--//social-list-->
                    <hr>
                </div><!--//profile-section-->

                <ul class="navbar-nav flex-column text-start">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Blog/"><i class="fas fa-home fa-fw me-2"></i>Anasayfa<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Blog/Hakkinda"><i class="fas fa-user fa-fw me-2"></i>Hakkında</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="main-wrapper">

        @RenderBody()

    </div><!--//main-wrapper-->
    <!-- Javascript -->
    <script src="~/Content/devblog-bs5-v2.0/assets/plugins/popper.min.js"></script>
    <script src="~/Content/devblog-bs5-v2.0/assets/plugins/bootstrap/js/bootstrap.min.js"></script>



</body>
</html>

